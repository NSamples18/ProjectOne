<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.westga.cs3211.AddStock.view.AddStockController"
            prefWidth="600" prefHeight="400">


    <HBox spacing="20"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          alignment="CENTER_LEFT">

        <Button fx:id="homeButton"
                text="Home"
                onAction="#handleHome"/>

        <Button fx:id="reviewButton"
                text="Review Stock Changes"
                visible="false"
                onAction="#handleReviewStock"/>

        <Pane HBox.hgrow="ALWAYS"/>

        <Button fx:id="logoutButton"
                text="Log Out"
                onAction="#handleLogout"/>

    </HBox>


    <Label text="Add New Stock Item"
           AnchorPane.topAnchor="70"
           AnchorPane.leftAnchor="20"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />


    <GridPane hgap="10" vgap="15"
              AnchorPane.topAnchor="120"
              AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40"
              AnchorPane.bottomAnchor="80">

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"
                   prefWidth="250"/>

        <Label text="Size:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="sizeField"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>

        <Label text="Special Quals:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="2"/>
        <ComboBox fx:id="specialCombo"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>

        <Label text="Condition:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="3"/>
        <ComboBox fx:id="conditionCombo"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="3"/>

        <Label text="Expiration Date:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="4"/>
        <DatePicker fx:id="expirationDatePicker"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="4"/>
    </GridPane>

    <Button text="Submit Stock"
            fx:id="submitButton"
            AnchorPane.bottomAnchor="20"
            AnchorPane.leftAnchor="250"
            onAction="#handleSubmit"
            prefWidth="120"/>

</AnchorPane>
